<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.example.andrew_nguyen.smart_mirror.home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"

            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright">

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.15"
        android:orientation="horizontal">


        <!--Todays Weather-->
        <LinearLayout
            android:id="@+id/todays_weather_linear_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="#1Affffff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_border"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/todays_weather_icon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    android:src="@drawable/sunny"></ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="18dp"
                    android:textColor="@android:color/white">

                    <TextView
                        android:id="@+id/precipitation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Precipitation: 40%"
                        android:textColor="@android:color/white"
                        android:textSize="6sp" />

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/precipitation"
                        android:text="Humidity: 70%"
                        android:textColor="@android:color/white"
                        android:textSize="6sp" />

                    <TextView
                        android:id="@+id/high_low_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/humidity"
                        android:text="High: 75  |  Low: 65 "
                        android:textColor="@android:color/white"
                        android:textSize="6sp" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:gravity="center_vertical"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Tampa, Florida"
                    android:id="@+id/weather_location"/>

                <TextView
                    android:id="@+id/todays_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="-6dp"
                    android:layout_weight="4"
                    android:text="70"
                    android:textColor="@android:color/white"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="8sp"
                    android:textColor="@android:color/white"
                    android:text="The sun will set at 7:45PM"/>

            </LinearLayout>


        </LinearLayout>

        <!--Weather Icons-->
        <LinearLayout
            android:id="@+id/weather_icons_linear_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="#1Affffff">
            <!--Day 1-->
            <LinearLayout
                android:id="@+id/icon_day1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_1_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mon"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/day_1_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".5"
                    android:src="@drawable/sunny" />

                <TextView
                    android:id="@+id/day_1_temp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </LinearLayout>

            <!--Day 2 -->
            <LinearLayout
                android:id="@+id/icon_day2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_2_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tue"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/day_2_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".5"
                    android:src="@drawable/sunny" />

                <TextView
                    android:id="@+id/day_2_temp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </LinearLayout>
            <!--Day 3 -->
            <LinearLayout
                android:id="@+id/icon_day3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_3_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Wed"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/day_3_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".5"
                    android:src="@drawable/sunny" />

                <TextView
                    android:id="@+id/day_3_temp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </LinearLayout>
            <!--Day 4 -->
            <LinearLayout
                android:id="@+id/icon_day4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_4_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Thu"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/day_4_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".5"
                    android:src="@drawable/sunny" />

                <TextView
                    android:id="@+id/day_4_temp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </LinearLayout>
            <!--Day 5 -->
            <LinearLayout
                android:id="@+id/icon_day5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_5_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Fri"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/day_5_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".5"
                    android:src="@drawable/sunny" />

                <TextView
                    android:id="@+id/day_5_temp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="#1Affffff"></LinearLayout>


        <LinearLayout
            android:id="@+id/time_and_date_linear_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="#1Affffff"
            android:orientation="vertical">


            <!--Time and Date-->
            <RelativeLayout
                android:id="@+id/time_date_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1">
                <!--Date-->
                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="right"
                    android:text="Monday, August 28 2017"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <!--Time-->
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_tv"
                    android:gravity="right"
                    android:text="12:00 AM"
                    android:textColor="@android:color/white"
                    android:textSize="32dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <!-- Todays Weather Icon-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-3dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/headlines"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>
        <!--TODO quote of the day -->
        <!--TODO news -->
        <!--TODO Andrew and Kelsey calendar -->
        <!--TODO facts about today -->
        <!--TODO How long till work -->
        <!--TODO Shopping List -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </LinearLayout>

</LinearLayout>
